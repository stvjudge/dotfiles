#
# ~/.aliases-zsh
#
# Kubectl aliases
alias k="kubectl"
alias kg="kubectl get"
alias kgpo="kubectl get pod"
alias kns="kubens"
alias kctx="kubectx"

# Docker aliases
alias d="docker"
alias dpsa="docker container ps -a"
alias dils="docker image ls"
alias dins="docker inspect"
alias ld="lazydocker"
alias dcdrma="docker compose down --rm all"

# Shell aliases
alias dot="cd ~/dotfiles"
alias lg="lazygit"
alias ll="ls -lha --color -v"
alias ls="ls -lh --color -v"
alias ..="cd .."
alias ...="cd ~"
alias c="clear"
alias h="history"
alias t="tree --dirsfirst -F"
alias rm="rm -i"
alias v="nvim"
alias z="zellij"
alias sozsh=". ~/.zshrc"
alias f="fzf --height=40% --layout=reverse --info=inline --border --filepath-word --cycle"
alias p="python3"
alias lzd=lazydocker
# alias n='NVIM_APPNAME="nativelsp" nvim'
alias n="nvim"
